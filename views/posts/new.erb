<div class="container">
  <div class="row clearfix">
    <div class="col-md-12 column">
      <form role="form">
        <div class="form-group">
          <h1> Nouveau post</h1>

          <form action="/posts" method="post">
            <label for="post_title">Titre: </label><br/>
            <input id="post_title" type="text" class="form-control" value="<%= @post.title %>"><br/>

            <label for="post_body">Body : </label><br/>
            <textarea id="post_body" name="post[body]" rows="5" class="form-control"><%= @post.body %></textarea></form>
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
  </div>
</div>

